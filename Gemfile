  gem 'sass-rails'
  gem 'coffee-rails'
  gem 'therubyrhino'
  gem 'bootstrap-sass'
  gem 'uglifier'
  gem 'closure-compiler'
end

group :development, :test do
  gem 'rspec-rails'
  gem 'cucumber'
  gem 'cucumber-rails', :require => false
  gem 'poltergeist'
  gem 'capybara'
  gem 'launchy'
end
