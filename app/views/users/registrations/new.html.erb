<div class="row">
  <div class="col-xs-4"></div>

  <div class="col-xs-4">
      <div class="page-header text-center">
        <%= image_tag "momentum_logo.jpg", width:"350" %>
      </div>

    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>

      <div class="form-group">

        <% if resource.errors.any? %>
        <div class="panel panel-danger">
            <div class="panel-heading">
              <h3 class="panel-title">Error</h3>
            </div>
            <div class="panel-body">
              <%= devise_error_messages! %>
            </div>
        </div>
        <% end %>

        <label class="control-label" id="email"></label>
        <%= f.email_field :email, { placeholder: "Email", 
                                    class: "form-control" } %>

        <label class="control-label" id="first_name"></label>
        <%= f.text_field :first_name , { placeholder: "First Name", 
                                    class: "form-control" } %>

        <label class="control-label" id="last_name"></label>
        <%= f.text_field :last_name, { placeholder: "Last Name", 
                                    class: "form-control" } %>


        <label class="control-label" id="password"></label>
        <%= f.password_field :password, { class: "form-control",
                                          placeholder: "Password" } %>
        <label class="control-label" id="password_confirmation"></label>
        <%= f.password_field :password_confirmation, 
                              { class: "form-control", 
                                placeholder: "Password Confirmation" } %>

        <br />
        <div><%= f.submit "Sign up", class: "btn btn-primary" %></div>
      </div>

    <% end %>

    <%= render "users/shared/links" %>
  </div>

  <div class="col-xs-4"></div>
</div>
